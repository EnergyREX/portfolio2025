---
import { Image } from "astro:assets"
import { ABOUT } from "../constants/about"

const { language } = Astro.params
---


<section class="flex flex-row mx-5 md:gap-30 justify-center align-middle items-center h-screen">
  <!-- About me text -->
  <div class="max-w-150">
    <h1 class="text-4xl font-bold">{ABOUT[language].title}</h1>
    <p class="text-2xl my-3">{ABOUT[language].text}</p>
  </div>

  <!-- About me image -->
  <Image class="hidden md:block"
  src="https://media.licdn.com/dms/image/v2/D4D03AQEYuKPm_Tkbfg/profile-displayphoto-shrink_200_200/profile-displayphoto-shrink_200_200/0/1711109220983?e=1743638400&v=beta&t=8CoxoQ_mtEPSnYh-gX2_sCm29QWmNRQcSx96UJ_69e8" 
  alt="Me!"
  width={200}
  height={200}/>
</div>
</section>