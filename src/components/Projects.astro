---
import { PROJECTS } from '../constants/projects'
import ProjectCard from './ProjectCard.astro'

const { language } = Astro.params 

---

<section id="projects" class="flex justify-center items-center gap-10 my-3 mx-5 lg:my-20 lg:mx-35">
  <div class="grid grid-cols-1 gap-10 lg:grid-cols-2 xl:grid-cols-3">
  {PROJECTS.map((project: any) => (
    <ProjectCard 
      bgImg={project.bgImg} 
      title={project[language].title} 
      shortDesc={project[language].shortDesc} 
      link={`.${project.link}`} 
      repo={project.repo} 
    />
  ))}
  </div>
</section>