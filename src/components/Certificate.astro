---
import Image from "astro/components/Image.astro"
import Link from "./Link.astro"

const { issuer, certificate_url, title, details, date, btn } = Astro.props
---


<details class="border dark:bg-neutral-800 rounded">
  <summary class="flex p-2 gap-1.5 align-middle items-center">
    <div>
      <Image width="52" height="52" alt={issuer} class="hidden md:block ml-2 rounded"
      src="https://media.licdn.com/dms/image/v2/D4D0BAQFI49yiiSnKeQ/company-logo_200_200/company-logo_200_200/0/1688551096102/openwebinars_logo?e=1746662400&v=beta&t=jyWUMSbROy7V3_0cif-T4WEiJcQ_rH3rlg7OIZG1Hgo"></Image>
    </div>
    <div class="flex flex-col w-full h-full">
    <div class="flex w-full gap-5 py-0.5 px-2">
    <h3 class="flex-1 text-lg font-bold">{title}</h3>
    <h3 class="font-semibold">{date}</h3>
    </div>
    <div class="p-2">
      <Link class="text-base" url={certificate_url}>{btn}</Link>
      </div>
  </div>
  </summary>
  <p class="p-3">{details}</p>
</details>

