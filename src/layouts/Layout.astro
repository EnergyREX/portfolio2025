---
import styles from '../styles/global.css'

interface Props {
	title: string;
}

const { title } = Astro.props

---

<!doctype html>
<html lang="en" data-theme="">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Francisco Javier Martín Fernández">
		<meta name="description" content="Hello, I'm Francisco, in this website I will introduce about me and my projects">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="keywords" content="HTML, CSS, JavaScript, TypeScript, Astro, EnergyREX, Francisco Javier Martin Fernandez">
		<script src="https://kit.fontawesome.com/323147442d.js" crossorigin="anonymous"></script>
		<title>{title}</title>
	</head>
	<body class="dark:bg-neutral-900 dark:text-neutral-50 ">
		<slot />
		<script>
			const htmlElement = document.getElementsByTagName('html')[0]
			const themeToggler = document.getElementById('themeToggler')

			function handleLoadTheme () {
				if (window.matchMedia('(prefers-color-scheme: light)').matches) {
					htmlElement.dataset.theme = 'light'
				} else {
					htmlElement.dataset.theme = "dark"
				}
			}

			function handleTheme () {
				if (themeToggler.value === "light") {
					htmlElement.dataset.theme = "light"
				} else if (themeToggler.value === "dark") {
					htmlElement.dataset.theme = "dark"
				}
			}

			themeToggler.addEventListener('change', handleTheme)
			document.addEventListener('DOMContentLoaded', handleLoadTheme)
		</script>
	</body>
</html>